<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"

    tools:context="jcollado.pw.numcode.MainActivity"
    android:background="@color/primary_dark">

    <RelativeLayout
        android:layout_height="0dip"
        android:layout_width="match_parent"
        android:layout_weight="0.42"
     android:layout_alignParentTop="true"
     android:layout_alignParentLeft="true"
     android:layout_alignParentStart="true"
      android:id="@+id/logoLayout">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/background"/>

     <ImageView
         android:layout_width="match_parent"
         fancy:srcCompat="@drawable/logo"
         android:layout_centerVertical="true"
         android:layout_centerHorizontal="true"
         android:id="@+id/imageView"
         android:layout_marginLeft="89dp"
         android:layout_height="36dp" />
 </RelativeLayout>

 <RelativeLayout
     android:layout_height="0dip"
     android:layout_width="match_parent"
     android:layout_weight="0.58"
     android:layout_below="@+id/logoLayput"
     android:background="@color/background2"
     android:id="@+id/buttonLayout">

     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_centerVertical="true"
         android:layout_alignParentLeft="true"
         android:layout_alignParentStart="true">

         <mehdi.sakout.fancybuttons.FancyButton
             android:id="@+id/buttonWeb"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:paddingBottom="15dp"
             android:paddingLeft="20dp"
             android:paddingRight="20dp"
             android:paddingTop="15dp"

             fancy:fb_borderColor="@color/green_button"
             fancy:fb_borderWidth="1dp"
             fancy:fb_defaultColor="@color/background2"
             fancy:fb_focusColor="@color/background2"
             fancy:fb_radius="30dp"
             fancy:fb_text="@string/numcode_button"
             fancy:fb_textColor="@color/green_button"
             android:layout_alignParentTop="false"
             android:layout_centerHorizontal="true"
             android:layout_marginLeft="110dp">

         </mehdi.sakout.fancybuttons.FancyButton>

         <mehdi.sakout.fancybuttons.FancyButton
             android:id="@+id/buttonProfile"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:paddingBottom="15dp"
             android:paddingLeft="20dp"


             android:paddingRight="20dp"
             android:paddingTop="15dp"
             fancy:fb_borderColor="@color/green_button"
             fancy:fb_borderWidth="1dp"
             fancy:fb_defaultColor="@color/green_button"
             fancy:fb_focusColor="@color/green_button"

             fancy:fb_radius="30dp"
             fancy:fb_text="@string/numcode_profile"
             fancy:fb_textColor="@color/background2"
             android:layout_below="@+id/buttonWeb"
             android:layout_centerHorizontal="true"
             android:layout_marginTop="36dp"
             android:layout_marginLeft="110dp" />

         <mehdi.sakout.fancybuttons.FancyButton
             android:id="@+id/buttonShare"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:paddingBottom="15dp"
             android:paddingLeft="20dp"

             fancy:fb_iconPosition="left"

             android:paddingRight="20dp"
             android:paddingTop="15dp"
             fancy:fb_borderColor="@color/green_button"
             fancy:fb_borderWidth="1dp"
             fancy:fb_defaultColor="@color/green_button"
             fancy:fb_focusColor="@color/green_button"

             fancy:fb_radius="30dp"
             fancy:fb_text="@string/numcode_share"
             fancy:fb_textColor="@color/background2"
             android:layout_below="@+id/buttonProfile"
             android:layout_marginTop="36dp"
             android:layout_centerHorizontal="true"
             android:layout_marginLeft="110dp" />
     </RelativeLayout>

     <ImageView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         fancy:srcCompat="@drawable/ic_settings"
         android:layout_alignParentBottom="true"
         android:layout_alignParentRight="true"
         android:layout_alignParentEnd="true"
         android:id="@+id/settingsButton"
         android:layout_marginRight="5dp"
         android:layout_marginBottom="5dp" />

 </RelativeLayout>

 </LinearLayout>
